<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <activity
        android:id="@+id/loginActivity"
        android:name="com.example.kuafrapp.View.login.LoginActivity"
        tools:layout="@layout/activity_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerActivity" />
        <action
            android:id="@+id/action_loginFragment_to_infoFragment"
            app:destination="@id/infoActivity" />
    </activity>

    <activity
        android:id="@+id/registerActivity"
        android:name="com.example.kuafrapp.View.login.RegisterActivity"
        tools:layout="@layout/activity_register" />

    <activity
        android:id="@+id/infoActivity"
        android:name="com.example.kuafrapp.View.InfoActivity"
        tools:layout="@layout/activity_info" />
</navigation>
